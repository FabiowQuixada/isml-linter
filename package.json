{
  "name": "isml-linter",
  "version": "3.0.0",
  "main": "index.js",
  "dependencies": {
    "app-root-path": "^2.1.0",
    "chalk": "^2.4.1",
    "readdir": "^0.1.0"
  },
  "devDependencies": {
    "eslint": "^4.19.1",
    "flatted": "^2.0.0",
    "eslint-plugin-jasmine": "^2.9.3",
    "eslint-plugin-varspacing": "^1.2.1",
    "ghooks": "^2.0.4",
    "grunt": "^1.0.3",
    "gulp": "^4.0.0",
    "gulp-eslint": "^4.0.2",
    "gulp-eslint-if-fixed": "^1.0.0",
    "gulp-istanbul": "^1.1.3",
    "gulp-jasmine": "^3.0.0",
    "gulp-run": "^1.7.1",
    "istanbul": "^0.4.5",
    "jasmine": "^3.3.1",
    "jasmine-node": "^2.0.1",
    "rimraf": "^2.6.2",
    "rmdir": "^1.2.0",
    "sinon": "^5.0.3",
    "to-snake-case": "^1.0.0"
  },
  "scripts": {
    "start": "node src/app/LinterRunner",
    "lint": "./node_modules/.bin/eslint . --fix",
    "test": "jasmine-node src/spec/",
    "cover": "node ./node_modules/istanbul/lib/cli.js cover node_modules/jasmine-node/bin/jasmine-node src/spec --statements 100",
    "check-coverage": "istanbul check-coverage --statements 95 --functions 95 --branches 95 --lines 95",
    "build": "node scripts/build.js",
    "prepush": "npm run lint && npm test && npm run check-coverage"
  },
  "config": {
    "ghooks": {
      "pre-push": "npm run prepush"
    }
  },
  "bin": {
    "isml-linter": "./bin/isml-linter.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/FabiowQuixada/isml-linter"
  },
  "keywords": [
    "isml",
    "linter",
    "demandware",
    "salesforce",
    "digital-script"
  ],
  "author": "Fabio Tavora Quixad√° <ftquixada@gmail.com>",
  "license": "ISC"
}
